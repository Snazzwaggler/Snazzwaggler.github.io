<form
    class="form"
    ref="form"
    {{on "submit" this.sendEmail}}
>

    <div>

        <label>
            <div>
                Name
            </div>

            <Input
                @type="text"
                @value={{this.username}}
            />
        </label>

        <label>
            <div>
                Email
            </div>

            <Input
                @type="text"
                @value={{this.user_email}}
            />
        </label>

    </div>

    <label>
        <div>
            Message
        </div>

        <Textarea
            @type="text"
            @value={{this.message}}
            rows="6"
            cols="80"
        />
    </label>

    <Input
        class="button"
        @type="submit"
        @value="Send"
    />

</form>